{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "strict": false,
    "resolveJsonModule": true
  },
  "include": [
    "server.ts",
    "src/lib/realtime/**/*"
  ],
  "exclude": [
    "node_modules",
    ".next"
  ],
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs"
    }
  }
}