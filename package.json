{
  "name": "studycollab-mvp",
  "version": "0.1.0",
  "description": "StudyCollab - Your Academic Companion. A comprehensive platform for students to manage tasks, take notes, share resources, and collaborate in study groups.",
  "author": {
    "name": "StudyCollab Team",
    "email": "support@studycollab.app",
    "url": "https://studycollab.app"
  },
  "private": true,
  "scripts": {
    "dev": "npx ts-node --project tsconfig.server.json server.ts",
    "build": "next build",
    "start": "npx ts-node --project tsconfig.server.json server.ts",
    "start:next": "next start",
    "dev:next": "next dev",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "prepare": "husky install",
    "setup-desktop": "node install-desktop.js",
    "electron": "electron dist/electron/main.js",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:3000 && npm run electron:compile && electron dist/electron/main.js\"",
    "electron:compile": "tsc --project tsconfig.electron.json",
    "electron:build": "npm run build && npm run electron:compile",
    "electron:rebuild": "electron-rebuild",
    "postinstall": "electron-builder install-app-deps",
    "electron:pack": "npm run electron:build && electron-builder --dir",
    "electron:dist": "npm run electron:build && electron-builder",
    "electron:dist:win": "npm run electron:build && electron-builder --win",
    "electron:dist:mac": "npm run electron:build && electron-builder --mac",
    "electron:dist:linux": "npm run electron:build && electron-builder --linux",
    "electron:publish": "npm run electron:build && electron-builder --publish=always",
    "electron:publish:win": "npm run electron:build && electron-builder --win --publish=always",
    "electron:publish:mac": "npm run electron:build && electron-builder --mac --publish=always",
    "electron:publish:linux": "npm run electron:build && electron-builder --linux --publish=always",
    "build-electron": "node scripts/build-electron.js",
    "build-electron:skip-native": "node scripts/build-electron.js --skip-native",
    "create-release": "node scripts/create-first-release.js",
    "build-electron:pack": "node scripts/build-electron.js --pack-only"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@hello-pangea/dnd": "^18.0.1",
    "@hookform/resolvers": "^3.10.0",
    "@radix-ui/react-avatar": "^1.1.10",
    "@radix-ui/react-checkbox": "^1.3.2",
    "@radix-ui/react-dialog": "^1.1.2",
    "@radix-ui/react-dropdown-menu": "^2.1.2",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-popover": "^1.1.14",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-radio-group": "^1.3.7",
    "@radix-ui/react-scroll-area": "^1.2.9",
    "@radix-ui/react-select": "^2.2.5",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.1.0",
    "@radix-ui/react-switch": "^1.2.5",
    "@radix-ui/react-tabs": "^1.1.12",
    "@radix-ui/react-toast": "^1.2.2",
    "@radix-ui/react-tooltip": "^1.2.7",
    "@supabase/auth-helpers-nextjs": "^0.10.0",
    "@supabase/ssr": "^0.6.1",
    "@supabase/supabase-js": "^2.54.0",
    "@tailwindcss/typography": "^0.5.16",
    "@tanstack/react-query": "^5.84.2",
    "@tanstack/react-query-devtools": "^5.84.2",
    "@tiptap/extension-character-count": "^3.0.9",
    "@tiptap/extension-highlight": "^3.0.9",
    "@tiptap/extension-image": "^3.0.9",
    "@tiptap/extension-link": "^3.0.9",
    "@tiptap/extension-placeholder": "^3.0.9",
    "@tiptap/extension-table": "^3.0.9",
    "@tiptap/extension-table-cell": "^3.0.9",
    "@tiptap/extension-table-header": "^3.0.9",
    "@tiptap/extension-table-row": "^3.0.9",
    "@tiptap/extension-task-item": "^3.0.9",
    "@tiptap/extension-task-list": "^3.0.9",
    "@tiptap/extension-text-align": "^3.0.9",
    "@tiptap/extension-underline": "^3.0.9",
    "@tiptap/pm": "^3.0.9",
    "@tiptap/react": "^3.0.9",
    "@tiptap/starter-kit": "^3.0.9",
    "@types/better-sqlite3": "^7.6.13",
    "@types/socket.io": "^3.0.2",
    "bcryptjs": "^3.0.2",
    "better-sqlite3": "^12.2.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "date-fns": "^4.1.0",
    "dotenv": "^17.2.1",
    "electron-store": "^10.1.0",
    "electron-updater": "^6.6.2",
    "html2canvas": "^1.4.1",
    "isomorphic-dompurify": "^2.26.0",
    "jspdf": "^3.0.1",
    "konva": "^9.3.22",
    "lucide-react": "^0.539.0",
    "next": "15.4.6",
    "react": "19.1.1",
    "react-day-picker": "^9.8.1",
    "react-dom": "19.1.1",
    "react-hook-form": "^7.62.0",
    "react-konva": "^19.0.7",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "tailwind-merge": "^2.6.0",
    "y-socket.io": "^1.1.3",
    "yjs": "^13.6.27",
    "zod": "^3.24.1",
    "zustand": "^5.0.7"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.7.0",
    "@testing-library/react": "^16.3.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/electron": "^1.6.12",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.17.1",
    "@types/react": "^19.1.9",
    "@types/react-dom": "^19.1.7",
    "autoprefixer": "^10.4.16",
    "concurrently": "^9.2.0",
    "cross-env": "^10.0.0",
    "electron": "^37.2.6",
    "electron-builder": "^26.0.12",
    "eslint": "^9.33.0",
    "eslint-config-next": "15.4.6",
    "husky": "^9.0.0",
    "jest": "^30.0.5",
    "jest-environment-jsdom": "^30.0.5",
    "lint-staged": "^15.2.0",
    "postcss": "^8.4.32",
    "prettier": "^3.3.0",
    "prettier-plugin-tailwindcss": "^0.6.0",
    "tailwindcss": "^3.4.0",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2",
    "wait-on": "^8.0.4"
  },
  "main": "dist/electron/main.js",
  "homepage": "./",
  "build": {
    "appId": "com.studycollab.app",
    "productName": "StudyCollab",
    "directories": {
      "output": "release"
    },
    "buildDependenciesFromSource": false,
    "nodeGypRebuild": false,
    "files": [
      "dist/electron/**/*",
      ".next/**/*",
      "public/**/*",
      "server.js",
      "node_modules/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "assets",
        "to": "assets",
        "filter": [
          "**/*"
        ]
      }
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "assets/icon.icns",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "assets/entitlements.mac.plist",
      "entitlementsInherit": "assets/entitlements.mac.plist",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "win": {
      "icon": "assets/icon.ico",
      "verifyUpdateCodeSignature": false,
      "requestedExecutionLevel": "asInvoker",
      "fileAssociations": [
        {
          "ext": "scnote",
          "name": "StudyCollab Note",
          "description": "StudyCollab Note File",
          "icon": "assets/note-icon.ico",
          "role": "Editor"
        },
        {
          "ext": "sctask",
          "name": "StudyCollab Task",
          "description": "StudyCollab Task File",
          "icon": "assets/task-icon.ico",
          "role": "Editor"
        },
        {
          "ext": "scboard",
          "name": "StudyCollab Board",
          "description": "StudyCollab Study Board File",
          "icon": "assets/board-icon.ico",
          "role": "Editor"
        }
      ],
      "protocols": [
        {
          "name": "StudyCollab Protocol",
          "schemes": [
            "studycollab"
          ]
        }
      ],
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ]
    },
    "linux": {
      "icon": "assets/icon.png",
      "category": "Office",
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "rpm",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "allowElevation": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "StudyCollab",
      "runAfterFinish": true,
      "deleteAppDataOnUninstall": false,
      "installerIcon": "assets/icon.ico",
      "uninstallerIcon": "assets/icon.ico",
      "artifactName": "${productName}-Setup-${version}.${ext}",
      "include": "build/installer.nsh",
      "guid": "a1b2c3d4-e5f6-7890-abcd-ef1234567890"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "studycollab",
        "repo": "studycollab-desktop",
        "releaseType": "release"
      },
      {
        "provider": "generic",
        "url": "https://studycollab.app/api/releases/"
      }
    ]
  }
}
