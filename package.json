{
  "name": "studycollab-mvp",
  "version": "0.1.0",
  "description": "StudyCollab - Your Academic Companion. A comprehensive platform for students to manage tasks, take notes, share resources, and collaborate in study groups.",
  "author": {
    "name": "StudyCollab Team",
    "email": "support@studycollab.app",
    "url": "https://study-collab-pi.vercel.app/"
  },
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "prepare": "husky install",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:3000 && electron dist/electron/main.js\"",
    "electron:build": "npm run build:electron && npm run electron:compile && electron-builder",
    "electron:compile": "tsc -p electron/tsconfig.json",
    "build:electron": "cross-env NODE_ENV=production NEXT_PUBLIC_ELECTRON=true next build",
    "electron:start": "electron dist/electron/main.js",
    "electron:test": "tsc -p electron/tsconfig.json && electron dist/electron/test-main.js",
    "dist": "npm run build:electron && npm run electron:compile && electron-builder --publish=never",
    "dist:win": "npm run build:electron && npm run electron:compile && electron-builder --win --publish=never",
    "dist:mac": "npm run build:electron && npm run electron:compile && electron-builder --mac --publish=never",
    "dist:linux": "npm run build:electron && npm run electron:compile && electron-builder --linux --publish=never"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@hello-pangea/dnd": "^18.0.1",
    "@hookform/resolvers": "^3.10.0",
    "@radix-ui/react-avatar": "^1.1.10",
    "@radix-ui/react-checkbox": "^1.3.2",
    "@radix-ui/react-dialog": "^1.1.2",
    "@radix-ui/react-dropdown-menu": "^2.1.2",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-popover": "^1.1.14",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-radio-group": "^1.3.7",
    "@radix-ui/react-scroll-area": "^1.2.9",
    "@radix-ui/react-select": "^2.2.5",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.1.0",
    "@radix-ui/react-switch": "^1.2.5",
    "@radix-ui/react-tabs": "^1.1.12",
    "@radix-ui/react-toast": "^1.2.2",
    "@radix-ui/react-tooltip": "^1.2.7",
    "@supabase/auth-helpers-nextjs": "^0.10.0",
    "@supabase/ssr": "^0.6.1",
    "@supabase/supabase-js": "^2.54.0",
    "@tailwindcss/typography": "^0.5.16",
    "@tanstack/react-query": "^5.84.2",
    "@tanstack/react-query-devtools": "^5.84.2",
    "@tiptap/extension-character-count": "^3.0.9",
    "@tiptap/extension-highlight": "^3.0.9",
    "@tiptap/extension-image": "^3.0.9",
    "@tiptap/extension-link": "^3.0.9",
    "@tiptap/extension-placeholder": "^3.0.9",
    "@tiptap/extension-table": "^3.2.0",
    "@tiptap/extension-table-cell": "^3.2.0",
    "@tiptap/extension-table-header": "^3.2.0",
    "@tiptap/extension-table-row": "^3.2.0",
    "@tiptap/extension-task-item": "^3.2.0",
    "@tiptap/extension-task-list": "^3.2.0",
    "@tiptap/extension-text-align": "^3.2.0",
    "@tiptap/extension-underline": "^3.2.0",
    "@tiptap/react": "^3.2.0",
    "@tiptap/starter-kit": "^3.2.0",
    "bcryptjs": "^3.0.2",
    "class-variance-authority": "^0.7.1",
    "cmdk": "^1.1.1",
    "html2canvas": "^1.4.1",
    "isomorphic-dompurify": "^2.26.0",
    "jspdf": "^3.0.1",
    "konva": "^9.3.22",
    "lucide-react": "^0.539.0",
    "next": "15.4.6",
    "react": "19.1.1",
    "react-day-picker": "^9.8.1",
    "react-dom": "19.1.1",
    "react-hook-form": "^7.62.0",
    "react-konva": "^19.0.7",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "tailwind-merge": "^2.6.0",
    "y-socket.io": "^1.1.3",
    "yjs": "^13.6.27",
    "zod": "^3.24.1",
    "zustand": "^5.0.7"
  },
  "devDependencies": {
    "@babel/core": "^7.24.0",
    "@babel/plugin-transform-runtime": "^7.24.0",
    "@babel/preset-env": "^7.24.0",
    "@babel/preset-react": "^7.23.3",
    "@babel/preset-typescript": "^7.23.3",
    "@testing-library/jest-dom": "^6.7.0",
    "@testing-library/react": "^16.3.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/electron": "^1.6.12",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.17.1",
    "@types/react": "^19.1.9",
    "@types/react-dom": "^19.1.7",
    "autoprefixer": "^10.4.16",
    "babel-loader": "^9.1.3",
    "concurrently": "^9.1.0",
    "cross-env": "^7.0.3",
    "electron": "^37.3.1",
    "electron-builder": "^26.0.12",
    "electron-updater": "^6.6.2",
    "eslint": "^9.33.0",
    "eslint-config-next": "15.4.6",
    "husky": "^9.0.0",
    "jest": "^30.0.5",
    "jest-environment-jsdom": "^30.0.5",
    "lint-staged": "^15.2.0",
    "postcss": "^8.4.32",
    "prettier": "^3.3.0",
    "prettier-plugin-tailwindcss": "^0.6.0",
    "tailwindcss": "^3.4.0",
    "ts-jest": "^29.4.1",
    "typescript": "^5.9.2",
    "wait-on": "^8.0.1"
  },
  "main": "dist/electron/main.js",
  "homepage": "./",
  "build": {
    "appId": "com.studycollab.desktop",
    "productName": "StudyCollab",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/",
      ".next/",
      "out/",
      "public/",
      "node_modules/",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "assets/",
        "to": "assets/",
        "filter": [
          "**/*"
        ]
      }
    ],
    "mac": {
      "category": "public.app-category.education",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "assets/icon.icns"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ],
      "icon": "assets/icon.ico"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.png",
      "category": "Education"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "publish": {
      "provider": "github",
      "owner": "studycollab",
      "repo": "studycollab-desktop"
    }
  }
}
